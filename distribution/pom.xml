        <artifactId>farao-core</artifactId>
        <version>1.3.0-SNAPSHOT</version>
    </parent>

    <artifactId>farao-distribution</artifactId>
    <packaging>pom</packaging>
    <name>Distribution package</name>
    <description>Generate a distribution package of FARAO including itools</description>

    <dependencies>
